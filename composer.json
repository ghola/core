{
  "name": "phpservicebus/core",
  "description": "PHP Service Bus core library",
  "keywords": [
    "bus",
    "service",
    "service bus",
    "command bus",
    "cqrs"
  ],
  "homepage": "https://github.com/phpservicebus/core",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Farcas",
      "email": "alex.farcas@gmail.com"
    }
  ],
  "require": {
    "php": "^7.0,<7.3",
    "ext-mbstring": "*",
    "ext-amqp": ">=1.7.0",
    "acclimate/container": "~2"
  },
  "require-dev": {
    "phpspec/phpspec": "4.3.0",
    "phpunit/phpunit": "6.5.6",
    "bossa/phpspec2-expect": "3.0.0",
    "empi89/php-amqp-stubs": "dev-master",
    "markup/rabbitmq-management-api": "2.0.0",
    "leanphp/phpspec-code-coverage": "4.0.0"
  },
  "autoload": {
    "psr-4": {
      "PSB\\Core\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "acceptance\\PSB\\Core\\": "tests\\acceptance",
      "acceptancesupport\\PSB\\Core\\": "tests\\acceptancesupport",
      "spec\\PSB\\Core\\": "tests\\spec",
      "specsupport\\PSB\\Core\\": "tests\\specsupport"
    }
  },
  "scripts": {
    "test": [
      "phpspec run",
      "phpunit"
    ]
  },
  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "branch-alias": {
      "dev-devel": "2.x-dev"
    }
  }
}
